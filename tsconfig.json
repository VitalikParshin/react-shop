{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "declaration": false,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "dom",
            "es2016",
            "es2016.array.include",
            "es2015.promise"
        ],
        "noImplicitAny": false,
        "pretty": true,
        "allowJs": false,  
        "removeComments": true,
        "strictNullChecks": true,
        "types": [
            "node"
        ]        
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*"
    ]
}

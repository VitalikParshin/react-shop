{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        // "baseUrl": "./src",
        "declaration": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015.promise",
            "es2016",
            "es2016.array.include"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "pretty": false,
        "removeComments": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}

{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "tsc",
            "suppressTaskName": true,
            "args": ["run", "tsc"],
            "problemMatcher": "$tsc",
            "showOutput": "silent",
            "isBuildCommand": true
        },
        {
            "taskName": "tslint",
            "suppressTaskName": true,
            "args": ["run", "tslint"],
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "relative"
            },
            "showOutput": "silent",
            "isBuildCommand": false
        },
        {
            "taskName": "stylelint",
            "suppressTaskName": true,
            "args": ["run", "stylelint"],
            "problemMatcher": "$lessCompile",
            "showOutput": "silent",
            "isBuildCommand": false
        }
    ]
}

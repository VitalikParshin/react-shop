// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.json.gzip": true,
        "**/npm-debug.log*": true,
        "node_modules": false,
        "**/.history": true,
        "**/.idea": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.vscode/chrome/": true,
        "**/*.js": true,
        "**/*.js.map": true,
        "**/*.patch": true,
        "**/*.diff": true,
        "**/.history": true,
        "**/.idea": true
    },
    "scss.validate": false,
    "css.validate": false,
    "html.format.wrapLineLength": 100,
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.check.tscVersion": false
  }
